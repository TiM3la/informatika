 Function F(n: integer): real;
 begin
   if n = 1 then
     F:=3*500*0.6 + 460
   else
   case n of 
    1..30: F:= 0.35*F(n-1)+ 500*(3 + 2*(n-1))* 0.6;
    31..60: F:= 0.35*F(n-1) + 500 *((3 + 2*(30-1)) - (n-1))*0.6;
    61..90: F:= 0.35*F(n-1) + 500 *(((3 + 2*(30-1)) - (60-1)) + 3*(n-1))*0.6;
   end   
 end;
begin
  print(trunc(F(90)));
end.
